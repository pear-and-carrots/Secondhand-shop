/* 搜索 */
.header {
  display: flex;
  padding: 10rpx;
  background: #fff;
  align-items: center;
}

.loaction {
  width: 100rpx;
  text-align: center;
}

.search {
  background: #f1f1f1f1;
  color: #acacac;
  flex: 1;
  font-size: 28rpx;
  padding: 10rpx;
  border-radius: 12rpx;
}


.shu_line {
  width: 2rpx;
  height: 60rpx;
  background-color: #8888;
  margin-left: 2rpx;
  margin-right: 5rpx;
}

.banner {
  height: 300rpx;
  width: 100%;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.notice {
  width: 100%;
  background: #fff;
  margin-bottom: 20rpx;
  height: 60rpx;
  display: flex;
  align-self: center;
  /* 上下居中 */
  align-items: center;
  /* 平均放在主格方向 */
  justify-content: space-between;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  border-bottom: 3rpx #888 solid;
  /* box-shadow: 1rpx 5rpx 5rpx 1rpx rgba(152, 165, 209, 0.533); */
}

.notice_1 {
  height: 60rpx;
  width: 15%;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  font-style: italic;
}

.notice_2 {
  height: 60rpx;
  width: 81%;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.ee {
  display: flex;
  align-items: center;
}


