/* line */
.line {
  margin: 5%;
  border-bottom: 2rpx solid #888;
}

/* 3.新闻资讯 */
.news {
  display: flex;
  flex-direction: row;
  align-self: center;
  align-items: center;
  text-align: center;
  justify-content: space-between;
  margin-left: 40%;
}

.news1 {
  padding: 20rpx;
  margin: 15rpx;
  background-color: #70c8e2;
  border-radius: 20rpx;
}



.news1 .active{
  padding: 20rpx;
  margin: 15rpx;
  background-color: #CEECF5;
  border-radius: 20rpx;
}

/* 详情页 */

.item {
  margin: 2%;
  background-color: #fff;
  padding: 18rpx;
  border-bottom: 1rpx solid #eee;
  position: relative;
  border-radius: 20rpx;
  border: 2rpx solid #888;
  /* margin-bottom: 20rpx; */
}

.title {
  font-size: 30rpx;
  font-weight: 550;
  color: #1a1a1a;
  margin-bottom: 18rpx;
  height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.item-wrapper {
  display: flex;
}

.img image {
  border-radius: 20rpx;
  width: 210rpx;
  height: 140rpx;
}

.info {
  color: #777;
  font-size: 26rpx;
  padding-left: 20rpx;
  height: 100rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.read-num {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  font-size: 24rpx;
  color: #4d4d4d;
}

.read-num text {
  color: red;
  margin-right: 4rpx;
}